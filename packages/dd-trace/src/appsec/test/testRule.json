          ]
        }
      ]
    },
    "REQUEST_HEADERS:user-agent-0": {
      "inherit_from": "server.request.headers.no_cookies",
      "run_on_key": false,
      "run_on_value": true,
      "key_access": {
        "is_allowlist": true,
        "paths": [
          [
            "user-agent"
          ]
        ]
      }
    },
    "REQUEST_HEADERS:referer-0": {
