{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "env": {
    "node" : true
  },
  "rules": {
    "max-len": [2, 120, 2],
    "no-var": 2,
    "no-console": 2,
    "prefer-const": 2,
    "object-curly-spacing": [2, "always"],
    "no-prototype-builtins": 0,
    "quote-props": 0,
    "dot-notation": 0,
    "multiline-ternary": 0,
    "quotes": 0,
    "node/handle-callback-err": 0,
    "node/no-deprecated-api": 0,
    "node/no-path-concat": 0
  }
}
